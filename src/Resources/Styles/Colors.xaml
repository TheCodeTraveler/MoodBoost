<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#FF6B35</Color>
    <Color x:Key="PrimaryDark">#E55A2B</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>

    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#4ECDC4</Color>
    <Color x:Key="SecondaryDarkText">#FFFFFF</Color>

    <!-- Tertiary Colors -->
    <Color x:Key="Tertiary">#2aa198</Color>

    <!-- Gray Scale -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Gray Palette -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Mood Colors -->
    <Color x:Key="MoodFantastic">#4CAF50</Color>
    <Color x:Key="MoodHappy">#8BC34A</Color>
    <Color x:Key="MoodNeutral">#FFC107</Color>
    <Color x:Key="MoodDown">#FF9800</Color>
    <Color x:Key="MoodSad">#F44336</Color>

</ResourceDictionary>
