<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MoodBoost.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:MoodBoost.ViewModels"
             x:DataType="vm:MainPageViewModel"
             Title="MoodBoost"
             BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
              ColumnDefinitions="*,*,*"
              Padding="20"
              RowSpacing="20">

            <!-- App Title -->
            <Label Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Text="MoodBoost" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            
            <!-- Date -->
            <Label Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Text="{Binding TodayDate, StringFormat='{0:dddd, MMMM dd, yyyy}'}" 
                   FontSize="16" 
                   TextColor="White"
                   Opacity="0.8"
                   HorizontalOptions="Center" />

            <!-- Mood Selection Title -->
            <Border Grid.Row="2"
                    Grid.ColumnSpan="3"
                    BackgroundColor="White" 
                    StrokeThickness="0"
                    Stroke="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Label Text="How are you feeling today?" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Padding="20,15" />
            </Border>
            
            <!-- Mood Selection Collection -->
            <CollectionView Grid.Row="3"
                            Grid.ColumnSpan="3"
                            ItemsSource="{Binding Moods}"
                            SelectionMode="None"
                            HeightRequest="100">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" 
                                       ItemSpacing="15" />
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    BackgroundColor="{Binding Color}"
                                    StrokeThickness="0"
                                    Stroke="Transparent"
                                    HeightRequest="80"
                                    WidthRequest="80">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="25" />
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=SelectMoodCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                            
                            <Label Grid.Row="0"
                                   Text="{Binding Emoji}" 
                                   FontSize="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                            
                            <Label Grid.Row="1"
                                   Text="{Binding Name}" 
                                   FontSize="10"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Margin="0,0,0,10" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Selected Mood Title -->
            <Border Grid.Row="4"
                    Grid.ColumnSpan="3"
                    BackgroundColor="White" 
                    StrokeThickness="0"
                    Stroke="Transparent"
                    IsVisible="{Binding HasSelectedMood}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Label Text="Your Current Mood" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Padding="20,15" />
            </Border>

            <!-- Selected Mood Emoji -->
            <Label Grid.Row="5"
                   Grid.Column="0"
                   Text="{Binding SelectedMood.Emoji}" 
                   FontSize="32"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasSelectedMood}" />

            <!-- Selected Mood Name -->
            <Label Grid.Row="5"
                   Grid.Column="1"
                   Text="{Binding SelectedMood.Name}" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource Gray900}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasSelectedMood}" />

            <!-- Selected Mood Description -->
            <Label Grid.Row="6"
                   Grid.ColumnSpan="3"
                   Text="{Binding SelectedMood.Description}" 
                   FontSize="14" 
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasSelectedMood}" />

            <!-- Quote Section Title -->
            <Border Grid.Row="7"
                    Grid.ColumnSpan="3"
                    BackgroundColor="White" 
                    StrokeThickness="0"
                    Stroke="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Label Text="Daily Inspiration" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Padding="20,15" />
            </Border>

            <!-- Quote Text -->
            <Border Grid.Row="8"
                    Grid.ColumnSpan="3"
                    BackgroundColor="White" 
                    StrokeThickness="0"
                    Stroke="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Label Text="{Binding CurrentQuote}" 
                       FontSize="16" 
                       TextColor="{StaticResource Gray700}"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"
                       LineHeight="1.4"
                       Padding="25" />
            </Border>

            <!-- New Quote Button -->
            <Button Grid.Row="9"
                    Grid.ColumnSpan="3"
                    Text="New Quote" 
                    Command="{Binding GenerateNewQuoteCommand}"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="White"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    HeightRequest="45" />

            <!-- Reset Button -->
            <Button Grid.Row="10"
                    Grid.ColumnSpan="3"
                    Text="Reset Mood" 
                    Command="{Binding ResetMoodCommand}"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    IsVisible="{Binding HasSelectedMood}" />
        </Grid>
    </ScrollView>
</ContentPage>
